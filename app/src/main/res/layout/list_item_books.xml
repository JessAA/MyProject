<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/item_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/book_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />


    </LinearLayout>

    <TextView
        android:id="@+id/book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_book"
        android:layout_marginLeft="40dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/book_price"
        android:layout_below="@+id/item_book"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/book_price"
        android:paddingTop="10dp"
        android:text="@string/quantity"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/minus_quantity"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_book"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/quantity_text"
        android:text="@string/minus_quantity" />

    <TextView
        android:id="@+id/quantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_book"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/quantity_text"
        android:padding="10dp"
        android:text="@string/quantity_value"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_quantity"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_book"
        android:layout_toRightOf="@+id/quantity_value"
        android:text="@string/add_quantity" />

</RelativeLayout>